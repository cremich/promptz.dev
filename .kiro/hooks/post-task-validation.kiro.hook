{
  "enabled": true,
  "name": "Post-Task Code Validation",
  "description": "Automatically runs npm run lint and npm run test whenever the agent finishes a task and has changed source code files",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "npm run lint && npm run test"
  }
}